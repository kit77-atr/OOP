import java.util.Scanner;

// สร้างคลาส Book ตามที่โจทย์กำหนด
class Book {
    // กำหนด Attributes เป็นแบบ private
    private String title;
    private String author;

    // 1. คอนสตรัคเตอร์ที่รับเฉพาะชื่อเรื่อง (กำหนดผู้แต่งเป็น Unknown)
    public Book(String title) {
        this.title = title;
        this.author = "Unknown";
    }

    // 2. คอนสตรัคเตอร์ที่รับทั้งชื่อเรื่องและผู้แต่ง
    public Book(String title, String author) {
        this.title = title;
        this.author = author;
    }

    // เมธอดสำหรับแสดงผลข้อมูล
    public void displayInfo() {
        System.out.println("Title: " + title + ", Author: " + author);
    }
}

public class lab04_1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // รับค่า "โหมด" (1 หรือ 2)
        int mode = sc.nextInt();
        sc.nextLine(); // เคลียร์ช่องว่างหลังจากรับเลข int

        if (mode == 1) {
            // โหมด 1: รับเฉพาะชื่อเรื่อง
            String title = sc.nextLine();
            Book book1 = new Book(title);
            book1.displayInfo();
        } 
        else if (mode == 2) {
            // โหมด 2: รับทั้งชื่อเรื่องและผู้แต่ง
            String title = sc.nextLine();
            String author = sc.nextLine();
            Book book2 = new Book(title, author);
            book2.displayInfo();
        }

        sc.close();
    }
}